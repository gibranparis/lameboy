{
  "compilerOptions": {
    "checkJs": false,          // Gradual: off by default
    "allowJs": true,
    "jsx": "react-jsx",
    "target": "ES2021",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", ".next"]
}
